---
version: '3.4'

services:
  betisier:
    container_name: betisier
    image: ghcr.io/sylvainmetayer/betisier-tp-docker:latest
    environment:
      - PUID={{ ansible_user_uid }}
      - PGID={{ ansible_user_gid }}
      - TZ=Europe/Paris
    ports:
      - 127.0.0.1:9004:80
    volumes:
      - ./config:/config
    # https://github.com/docker/for-linux/issues/264#issuecomment-772844305
    extra_hosts:
      - 'host.docker.internal:host-gateway'
    restart: 'no'
