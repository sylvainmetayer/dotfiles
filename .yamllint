---
extends: default

rules:
  line-length:
    max: 140
    level: warning
  comments:
    min-spaces-from-content: 1
  comments-indentation: false
  braces:
    max-spaces-inside: 1
  octal-values:
    forbid-implicit-octal: true
    forbid-explicit-octal: true

ignore: |
  /.github/workflows/*
  /galaxy_roles/
  /collections/
  /.direnv/
  /.venv/
  /.ansible/
  playbooks/gop/locals.yml
